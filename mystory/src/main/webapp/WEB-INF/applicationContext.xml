<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">
	
	
    <mvc:annotation-driven />
    <context:annotation-config/>
    
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.base" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.user" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.home" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.home.viewing" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.story.reading" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.story.telling" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.story.commenting" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.story.generating" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.category" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.voting" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.image" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.shared.prepare" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.wall.viewing" />
    <context:component-scan base-package="com.inspireon.chuyentrolinhtinh.web.rest.social" />
    
    
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:chuyentrolinhtinh.properties</value>
                <value>classpath:mongo.properties</value>
            </list>
        </property>
	</bean>
	
	<bean id="applicationProperties" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
		<property name="singleton" value="true" />
		<property name="properties">
			<props>
				<prop key="environment">${environment}</prop>
				<prop key="siteurl">${siteurl}</prop>
			</props>
		</property>
	</bean>
	
	
	<mvc:resources mapping="/resources/**" location="/resources/"/> 
	
	<!-- i18n Configuration-->
	<!-- START -->
    <bean id="messageSource"
    	class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
	    <property name="basename" value="classpath:/i18n/messages" />
	    <property name="defaultEncoding" value="UTF-8"/>
	</bean>
	 
	<bean id="i18NInterceptor" class="com.inspireon.chuyentrolinhtinh.web.rest.shared.i18n.I18NInterceptor">
	</bean>
 
     <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
     	<property name="defaultLocale" value="vi"/>     
     </bean> 
 
     <mvc:interceptors>  
         <mvc:interceptor>
     		<mvc:mapping path="/**"/>
     		<mvc:exclude-mapping path="/resources/**"/>
     		<mvc:exclude-mapping path="/image/**"/>     		
     		<bean class="com.inspireon.chuyentrolinhtinh.web.rest.shared.i18n.I18NInterceptor" />
     	</mvc:interceptor>    
     </mvc:interceptors>  	
     
    <bean id="i18NUtils" class="com.inspireon.chuyentrolinhtinh.web.rest.shared.i18n.I18NUtils"></bean>
	<!-- END -->									 
		
	<import resource="applicationContext-service.xml"/>
	<import resource="applicationContext-security.xml"/>
	<import resource="applicationContext-persistence.xml"/>	
</beans>